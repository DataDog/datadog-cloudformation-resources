{
  "Type": "query alert",
  "Query": "avg(last_1mo):avg:aws.ec2.cpu{environment:foo,host:foo} by {host,environment} > 4",
  "Name": "SSH Activity on PROD",
  "Message": "@slack-datadog-testing",
  "Priority": 1,
  "Options": {
    "Locked": false,
    "IncludeTags": true,
    "NewHostDelay": 300,
    "NotifyAudit": false,
    "NotifyBy": ["host"],
    "NotificationPresetName":"show_all",
    "NotifyNoData": false,
    "RenotifyInterval": 0,
    "EnableLogsSample": true,
    "Thresholds": {
      "Critical": 4
    }
  }
}