{
  "Type": "query alert",
  "Query": "avg(last_1mo):avg:aws.ec2.cpu{environment:foo,host:foo} by {host,environment} > 5",
  "Name": "SSH Activity on PROD updated",
  "Message": "@slack-datadog-testing",
  "Priority": 1,
  "Options": {
    "Locked": false,
    "IncludeTags": false,
    "NewHostDelay": 40,
    "NotifyAudit": true,
    "NotifyBy": ["host"],
    "NotificationPresetName":"show_all",
    "NotifyNoData": true,
    "RenotifyInterval": 5,
    "EnableLogsSample": true,
    "Thresholds": {
      "Critical": 5
    }
  }
}